// A launch configuration that compiles the extension and then opens it inside a new window
// Use IntelliSense to learn about possible attributes.
// Hover to view descriptions of existing attributes.
// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run Extension",
      "type": "extensionHost",
      "request": "launch",
      // vscode-neovim does NOT play well when debugging other extensions
      // it incorrectly monkey-patches standard APIs (only patching some console methods and leaving the rest undefined, ...), and randomly errors
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extension=asvetliakov.vscode-neovim"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "pauseForSourceMap": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Inspect-Brk Extension Host",
      "type": "extensionHost",
      "request": "launch",
      // vscode-neovim does NOT play well when debugging other extensions
      // it incorrectly monkey-patches standard APIs (only patching some console methods and leaving the rest undefined, ...), and randomly errors
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--disable-extension=asvetliakov.vscode-neovim",
        "--inspect-brk-extensions=9229"
      ],
      "outFiles": [
        "${workspaceFolder}/dist/**/*.js"
      ],
      "preLaunchTask": "${defaultBuildTask}",
      "pauseForSourceMap": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "name": "Extension Tests",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}",
        "--extensionTestsPath=${workspaceFolder}/dist.test/tests/runTests",
        "--disable-extensions"
      ],
      "outFiles": [
        "${workspaceFolder}/dist.test/**/*.js"
      ],
      "preLaunchTask": "build:test",
      "pauseForSourceMap": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
